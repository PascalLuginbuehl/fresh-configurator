{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "\u0000", // https://github.com/microsoft/TypeScript/issues/31869
    "paths": {
      "@betaflight/msp": ["../../msp/src"]
    }
  },
  "include": [
    "test-script.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx",
    "*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
