{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "start.ts",
    ".jest/*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx",
    "*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
