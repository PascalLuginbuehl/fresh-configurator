{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [
      "src",
      "stories"
    ],
    "baseUrl": "./src",
    "paths": {
      "@betaflight/api": [
        "../../api/src"
      ],
      "@betaflight/api-server": [
        "../../api-server/src"
      ]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "stories/**/*.tsx",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx",
    "*.d.ts",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    ".jest/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}