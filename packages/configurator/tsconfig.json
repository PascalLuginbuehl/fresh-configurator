{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": ["src", "stories"],
    "baseUrl": "./src",
    "paths": {
      "@fresh/msp": ["../../msp/src"]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "stories/**/*.tsx",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx",
    "*.d.ts",
    ".storybook/*.ts",
    ".storybook/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
