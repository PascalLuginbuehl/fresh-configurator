{
  "name": "@betaflight/configurator",
  "version": "1.0.0",
  "main": "./app/main.js",
  "license": "MIT",
  "build": {
    "productName": "Betaflight Configurator",
    "appId": "com.betaflight.configurator",
    "mac": {
      "category": "your.app.category.type",
      "artifactName": "betaflight-configurator-${version}.${ext}"
    },
    "linux": {
      "category": "Settings",
      "executableName": "betaflight-configurator",
      "artifactName": "betaflight-configurator-${version}.${ext}"
    },
    "win": {
      "target": "msi",
      "artifactName": "betaflight-configurator-${version}.${ext}"
    }
  },
  "scripts": {
    "start": "webpack-dev-server --hot --host 0.0.0.0 --mode development --config ./webpack.config.js",
    "build:electron": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production --config ./webpack.config.js",
    "build": "yarn build:electron && yarn build:renderer && electron-builder",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@apollo/client": "3.0.0-beta.42",
    "@apollo/link-ws": "^2.0.0-beta.3",
    "@betaflight/api": "^1.0.0",
    "@betaflight/api-server": "^1.0.0",
    "date-fns": "^2.11.0",
    "get-port": "^5.1.1",
    "graphql": "14.6.0",
    "graphql-tag": "^2.10.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-is": "^16.12.0",
    "react-markdown": "^4.3.1",
    "react-switch": "^5.0.1",
    "react-three-fiber": "^4.0.14",
    "semver": "^7.1.3",
    "styled-components": "^5.0.1",
    "subscriptions-transport-ws": "^0.9.16",
    "three": "0.98.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-docs": "^5.3.12",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.12",
    "@testing-library/jest-dom": "^5.4.0",
    "@testing-library/react": "^10.0.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-is": "^16.7.1",
    "@types/semver": "^7.1.0",
    "@types/styled-components": "^4.4.2",
    "@types/three": "0.93.31",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "electron": "7.1.11",
    "electron-builder": "^22.4.1",
    "electron-devtools-installer": "^3.0.0",
    "file-loader": "^5.1.0",
    "fork-ts-checker-webpack-plugin": "^4.0.3",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-date-mock": "^1.0.8",
    "jest-styled-components": "^7.0.2",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-svg-loader": "^3.0.3",
    "svg-inline-loader": "^0.8.0",
    "themeprovider-storybook": "^1.5.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.8.2",
    "typescript": ">=3.7",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.3"
  }
}
