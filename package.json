{
  "name": "fresh-configurator",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "repository": "https://github.com/freshollie/fresh-configurator",
  "author": "Oliver Bell <freshollie@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn prepare && yarn workspace @fresh/configurator start",
    "test": "jest",
    "build": "wsrun -t build",
    "storybook": "yarn workspace @fresh/configurator storybook",
    "build:storybook": "yarn workspace @fresh/configurator build-storybook",
    "codegen": "graphql-codegen --config codegen.yml",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx",
    "prepare": "yarn codegen && wsrun -mt prepare"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@graphql-codegen/add": "^1.12.1",
    "@graphql-codegen/cli": "^1.12.1",
    "@graphql-codegen/typescript-operations": "^1.12.1",
    "@graphql-codegen/typescript-react-apollo": "^1.12.1",
    "@graphql-codegen/typescript-resolvers": "^1.12.1",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "electron": "7.1.11",
    "electron-builder": "^22.4.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "husky": "^4.2.5",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "wsrun": "^5.2.0"
  },
  "dependencies": {
    "@serialport/bindings": "^8.0.7"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{json,graphql}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
