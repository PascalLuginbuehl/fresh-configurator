{
  "name": "electron-configurator",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "repository": "https://github.com/freshollie/electron-configurator",
  "author": "Oliver Bell <freshollie@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn workspace @fresh/configurator start",
    "postinstall": "electron-rebuild",
    "codegen": "graphql-codegen --config codegen.yml",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx",
    "prepare": "yarn codegen && yarn workspace @fresh/msp prepare"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@graphql-codegen/add": "^1.12.1",
    "@graphql-codegen/cli": "^1.12.1",
    "@graphql-codegen/typescript-operations": "^1.12.1",
    "@graphql-codegen/typescript-react-apollo": "^1.12.1",
    "@graphql-codegen/typescript-resolvers": "^1.12.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "add": "^2.0.6",
    "electron": "7.1.11",
    "electron-rebuild": "^1.10.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "graphql": "^14.6.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "utility-types": "^3.10.0",
    "yarn": "^1.21.1"
  },
  "dependencies": {
    "@serialport/bindings": "^8.0.7"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{json}": [
      "prettier --write",
      "git add"
    ]
  }
}
