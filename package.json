{
  "name": "fresh-configurator",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "repository": "https://github.com/freshollie/fresh-configurator",
  "author": "Oliver Bell <freshollie@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build:lib && yarn workspace @betaflight/configurator start",
    "start:dev": "yarn build:lib && yarn workspace @betaflight/configurator start:mocked",
    "test": "jest",
    "build": "yarn codegen && wsrun -mt build",
    "build:lib": "yarn codegen && wsrun -mt -x @betaflight/configurator build",
    "storybook": "yarn workspace @betaflight/configurator storybook",
    "build:storybook": "yarn workspace @betaflight/configurator build-storybook",
    "codegen:clean": "rimraf packages/*/src/**/__generated__",
    "codegen": "yarn codegen:clean && graphql-codegen --config codegen.yml && graphql-let",
    "postinstall": "yarn workspace @betaflight/configurator install-deps",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx",
    "lint:all": "yarn lint . .*.js",
    "prepare": "yarn build:lib",
    "publish": "lerna publish --conventional-commits -y",
    "release": "yarn build:lib && yarn workspace @betaflight/configurator release"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "devDependencies": {
    "@graphql-codegen/add": "^1.13.2",
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/plugin-helpers": "^1.13.2",
    "@graphql-codegen/schema-ast": "^1.13.2",
    "@graphql-codegen/typescript-operations": "^1.13.2",
    "@graphql-codegen/typescript-react-apollo": "^1.13.2",
    "@graphql-codegen/typescript-resolvers": "^1.13.2",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "graphql": "^14.6.0",
    "graphql-codegen-persisted-query-ids": "^0.1.2",
    "graphql-let": "^0.10.0",
    "husky": "^3.0.0",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "wsrun": "^5.2.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{json,graphql}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  }
}
