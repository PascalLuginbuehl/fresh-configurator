{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "\u0000",
    "paths": {
      "@betaflight/*": ["./packages/*/src"]
    },
    "composite": true
  },
  "exclude": ["node_modules", "dist"]
}
